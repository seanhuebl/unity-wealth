{
  "name": "go backend container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "GPG_PRIVATE_KEY_ASC": "${localEnv:GPG_PRIVATE_KEY_ASC}"
    }
  },
  "mounts": [
    "source=${env:HOME}/.gnupg/my-gpg-key.asc,target=/home/vscode/my-gpg-key.asc,type=bind"
  ],
  "workspaceFolder": "/workspaces/unity-wealth",
  "postCreateCommand": "bash ./.devcontainer/setup-dev.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-postgresql",
        "github.codespaces",
        "github.vscode-github-actions",
        "github.copilot",
        "github.copilot-chat",
        "humao.rest-client",
        "mechatroner.rainbow-csv",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "mtxr.sqltools-driver-pg",
        "davidanson.vscode-markdownlint",
        "daltonmenezes.aura-theme",
        "ReneSaarsoo.sql-formatter-vsc"
      ],
      "settings": {
        "workbench.colorTheme": "Aura Dark",
        "editor.formatOnSave": true,
        "go.formatTool": "goimports",
        "editor.formatOnPaste": true,
        "rest-client.environmentVariables": {
          "$shared": {}
        },
        "workbench.editor.languageDetectionHints": {
          "notebookEditors": false
        },
        "editor.cursorBlinking": "expand",
        "editor.cursorSmoothCaretAnimation": "on",
        "terminal.integrated.enableMultiLinePasteWarning": "never",
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false,
          "scminput": false,
          "go": false
        },
        "github.copilot.nextEditSuggestions.enabled": true,
        "github.copilot.advanced": {},
        "sqltools.format": {},
        "[sql]": {
          "editor.defaultFormatter": "ReneSaarsoo.sql-formatter-vsc",
          "editor.formatOnSave": true
        },
        "SQL-Formatter-VSCode.dialect": "postgresql"
      },
      "snippets": {
        "go-snippets.code-snippets": {
          "FnGin": {
            "prefix": "fngin",
            "body": [
              "func(c *gin.Context){",
              "$1",
              "}$0"
            ],
            "description": "gin anonymous with c instead of ctx"
          },
          "Base err": {
            "prefix": "base",
            "body": [
              "baseErr := errors.Join($1, err)$0"
            ],
            "description": "setting up base err for wrapping"
          },
          "Wrapped error": {
            "prefix": "wrp",
            "body": [
              "wrapped := fmt.Errorf(\"$1: %w\", baseErr)$0"
            ],
            "description": "fast way to write wrapped error boilerplate"
          },
          "Table-driven test": {
            "prefix": "tdt",
            "body": [
              "func Test$1(t *testing.T) {",
              "  tests := []struct {",
              "    name string",
              "    $2",
              "  }{",
              "     {",
              "        $3",
              "     },",
              "  }",
              "  for _, tc := range tests {",
              "    t.Run(tc.name, func(t *testing.T) {",
              "      $0",
              "    })",
              "  }",
              "}"
            ],
            "description": "Go table-driven test "
          }
        }
      }
    }
  }
}